{% extends '../layout/index.html.twig' %}

{% block sidebar %}
    {% include './partial.sidebar.html.twig' %}
{% endblock %}

{% block content %}
    <h1 class="page-header"><span class="fa fa-users"></span>&nbsp;&nbsp;<a href="/admin/users/create/" class="btn btn-success btn-sm" role="button"><span class="fa fa-user-plus"></span>&nbsp;&nbsp;Create new</a>&nbsp;&nbsp;Users : {{ usersCount }}</h1>
    <form method="post" action="/admin/users/">
        {% if (error or success) %}
            <div class="form-group row">
                <div class="col-sm-8">
                    {% if (error) %}
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            {{ error }}
                        </div>
                    {% else %}
                        <div class="alert alert-success alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            {{ success }}
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endif %}
        <div class="form-group row">
            <div class="col-sm-2">
                <label class="control-label" for="role">System role:</label>
                <select class="form-control" id="role" name="role">
                    <option value="-1">ALL</option>
                    {% for role, id in application.getDockerBlah().getUserManager().getRoles() %}
                        <option value="{{ id }}" {% if (selectedRole == id) %}selected{% endif %}>{{ role }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-sm-2">
                <label class="control-label" for="project">Project:</label>
                <select class="form-control" id="project" name="project">
                    <option value="-1">ALL</option>
                    {% for _, project in application.getDockerBlah().getProjectManager().getAll() %}
                        <option value="{{ project.getId() }}" {% if (selectedProject == project.getId()) %}selected{% endif %}>{{ project.getName() }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-sm-2">
                <label class="control-label" for="project_role">Project role:</label>
                <select class="form-control" id="project_role" name="project_role">
                    <option value="-1">ALL</option>
                    {% for role, id in application.getDockerBlah().getProjectManager().getRoles() %}
                        <option value="{{ id }}" {% if (selectedProjectRole == id) %}selected{% endif %}>{{ role }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-sm-3">
                <div class="col-sm-6">
                    <label class="control-label" for="filter">&nbsp;</label>
                    <button type="submit" id="filter" name="filter" class="form-control btn btn-success"><span class="fa fa-filter"></span>&nbsp;&nbsp;Filter</button>
                </div>
                <div class="col-sm-6">
                    <label class="control-label" for="reset">&nbsp;</label>
                    <a href="/admin/users/" id="reset" name="reset" class="btn btn-primary form-control" role="button"><span class="fa fa-undo"></span>&nbsp;&nbsp;Reset</a>
                </div>
            </div>
        </div>
    </form>
    <br />
    <table class="table table-striped table-vcenter">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Login</th>
            <th>Projects</th>
            <th>Actions</th>
        </tr>
        </thead>
        {% for _, user in users %}
            <tr>
                <td>{{ user.getId() }}</td>
                <td>{{ user.getName() }}</td>
                <td>{{ user.getLogin() }}</td>
                <td>
                    {% for project in application.getDockerBlah().getProjectManager().getAllForUser(user) %}
                        {{ project.project.getName() }}<br>
                    {% endfor %}
                </td>
                <td>
                    <a href="/admin/users/{{ user.getId() }}/" class="btn btn-primary" role="button"><span class="fa fa-pencil"></span>&nbsp;&nbsp;Edit</a>&nbsp;&nbsp;
                    <a href="/admin/users/{{ user.getId() }}/delete/" class="btn btn-danger" role="button"><span class="fa fa-trash-o"></span>&nbsp;&nbsp;Delete</a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
