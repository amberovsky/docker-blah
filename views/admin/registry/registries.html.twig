{% extends '../../layout/index.html.twig' %}

{% block sidebar %}
    {% include './../partial.sidebar.html.twig' %}
{% endblock %}

{% block content %}
    <h1 class="page-header"><span class="fa fa-users fa-fw"></span>&nbsp;&nbsp;<a href="/admin/registries/create/" class="btn btn-success btn-sm" role="button"><span class="fa fa-user-plus fa-lg"></span>&nbsp;&nbsp;Add new</a>&nbsp;&nbsp;Registries : {{ registriesCount }}</h1>
    {% if (error or success) %}
        <div class="row">
            <div class="col-sm-12">
                {% if (error) %}
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        {{ error }}
                    </div>
                {% else %}
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        {{ success }}
                    </div>
                {% endif %}
            </div>
        </div>
    {% endif %}
    <br />
    <table class="table table-striped table-vcenter">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>IP</th>
            <th>Actions</th>
        </tr>
        </thead>
        {% for _, registry in registries %}
            <tr>
                <td>{{ registry.getId() }}</td>
                <td>{{ registry.getName() }}</td>
                <td>{{ registry.getIp() }}</td>
                <td class="text-center">
                    <a href="/admin/registries/{{ registry.getId() }}/" class="btn btn-primary btn-sm" role="button"><span class="fa fa-pencil"></span>&nbsp;&nbsp;Edit</a>&nbsp;&nbsp;
                    <a href="/admin/registries/{{ registry.getId() }}/delete/" class="btn btn-danger btn-sm" role="button"><span class="fa fa-trash-o"></span>&nbsp;&nbsp;Delete</a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
