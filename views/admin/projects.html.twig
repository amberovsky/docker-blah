{% extends '../layout/index.html.twig' %}

{% block sidebar %}
    {% include './partial.sidebar.html.twig' %}
{% endblock %}

{% block content %}
    <h1 class="page-header"><span class="fa fa-cubes"></span>&nbsp;&nbsp;<a href="/admin/projects/create/" class="btn btn-success btn-sm" role="button"><span class="fa fa-user-plus"></span>&nbsp;&nbsp;Create new</a>&nbsp;&nbsp;Projects</h1>
        {% if (error || success) %}
            <div class="form-group row">
                <div class="col-sm-8">
                    {% if (error) %}
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            {{ error }}
                        </div>
                    {% else %}
                        <div class="alert alert-success alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            {{ success }}
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endif %}
        <table class="table table-striped table-vcenter">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
            </thead>
            {% for project in projects %}
                <tr>
                    <td>{{ project.getId() }}</td>
                    <td>{{ project.getName() }}</td>
                    <td>
                        <a href="/admin/projects/{{ project.getId() }}/" class="btn btn-primary" role="button"><span class="fa fa-pencil"></span>&nbsp;&nbsp;Edit</a>&nbsp;&nbsp;
                        <a href="/admin/projects/{{ project.getId() }}/" class="btn btn-info" role="button"><span class="fa fa-external-link"></span>&nbsp;&nbsp;Users</a>&nbsp;&nbsp;
                        <a href="/project/{{ project.getId() }}/nodes/" class="btn btn-info" role="button"><span class="fa fa-external-link"></span>&nbsp;&nbsp;Nodes</a>&nbsp;&nbsp;
                        <a href="/project/{{ project.getId() }}/containers/" class="btn btn-info" role="button"><span class="fa fa-external-link"></span>&nbsp;&nbsp;Containers</a>&nbsp;&nbsp;
                        <a href="/project/{{ project.getId() }}/settings/" class="btn btn-info" role="button"><span class="fa fa-external-link"></span>&nbsp;&nbsp;Settings</a>&nbsp;&nbsp;
                        <a href="/admin/projects/{{ user.getId() }}/delete/" class="btn btn-danger" role="button"><span class="fa fa-trash-o"></span>&nbsp;&nbsp;Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
{% endblock %}
