{% extends '../../layout/index.html.twig' %}

{% block sidebar %}
    {% include './../partial.sidebar.html.twig' %}
{% endblock %}

{% block content %}
    <h1 class="page-header"><span class="fa fa-sitemap fa-fw"></span>&nbsp;&nbsp;<a href="/project/{{ request.project.getId() }}/nodes/" class="btn btn-danger btn-sm" role="button"><span class="fa fa-hand-o-left fa-lg"></span>&nbsp;&nbsp;Go back to nodes in <strong>{{ request.project.getName() }}</strong></a>&nbsp;&nbsp;Node #{{ request.node.getId() }} {{ request.node.getName() }}</h1>

    {% block tabs %}
        {% include './partial.tab.html.twig' %}
    {% endblock %}

    {% if (error) %}
        <div class="col-sm-12">
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ error }}
            </div>
        </div>
    {% else %}

        <br />
        
        <table class="table table-striped">
            <tr>
                <th>Option</th>
                <th>Value</th>
            </tr>
            <tr>
                <td>Architecture</td>
                <td>{{ info.Architecture }}</td>
            </tr>
            <tr>
                <td>Containers</td>
                <td>{{ info.Containers }}</td>
            </tr>
            <tr>
                <td>ContainersRunning</td>
                <td>{{ info.ContainersRunning }}</td>
            </tr>
            <tr>
                <td>ContainersStopped</td>
                <td>{{ info.ContainersStopped }}</td>
            </tr>
            <tr>
                <td>ContainersPaused</td>
                <td>{{ info.ContainersPaused }}</td>
            </tr>
            <tr>
                <td>Images</td>
                <td>{{ info.Images }}</td>
            </tr>
            <tr>
                <td>MemTotal</td>
                <td>{{ (info.MemTotal/1024/1024)|round(2) }} MiB</td>
            </tr>
            <tr>
                <td>OperatingSystem</td>
                <td>{{ info.OperatingSystem }}</td>
            </tr>
            <tr>
                <td>ServerVersion</td>
                <td>{{ info.ServerVersion }}</td>
            </tr>
            <tr>
                <td>SystemStatus</td>
                <td>{{ info.SystemStatus|dump }}</td>
            </tr>
        </table>
    {% endif %}
{% endblock %}
