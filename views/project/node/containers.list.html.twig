{% if (error) %}
    <div class="form-group form-group-sm">
        <div class="col-sm-12">
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ error }}
            </div>
        </div>
    </div>
{% else %}
    <table class="table table-striped">
        <tr>
            <th>ID</th>
            <th>Image</th>
            <th>Name</th>
            <th>Status</th>
            <th>Created</th>
            <th>Actions</th>
        </tr>
        {% for container in containers %}
            <tr>
                <td>{{ container.Id|truncate(12, True, '') }}</td>
                <td>{{ container.Image }}</td>
                <td>
                    {% for name in container.Names %}
                        {{ name|slice(1) }}<br>
                    {% endfor %}
                </td>
                <td>{{ container.Status }}</td>
                <td>{{ container.Created|date }}</td>
                <td>
                    {% if (container.State == 'running') %}
                        <a href="/node/{{ request.node.getId() }}/containers/{{ container.Id }}/overview/" class="btn btn-primary btn-sm" role="button" title="Inspect"><span class="fa fa-wrench"></span></a>
                        <a href="/node/{{ request.node.getId() }}/containers/{{ container.Id }}/overview/" class="btn btn-success btn-sm" role="button" title="Stop"><span class="fa fa-stop"></span></a>
                    {% else %}
                        <a href="/node/{{ request.node.getId() }}/containers/{{ container.Id }}/overview/" class="btn btn-success btn-sm" role="button" title="Start"><span class="fa fa-play"></span></a>
                    {% endif %}
                    <a href="/node/{{ request.node.getId() }}/containers/{{ container.Id }}/overview/" class="btn btn-danger btn-sm" role="button" title="Delete"><span class="fa fa-trash-o"></span></a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endif %}
