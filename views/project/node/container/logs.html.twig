{% extends '../../../layout/index.html.twig' %}

{% block sidebar %}
    {% include './../../partial.sidebar.html.twig' %}
{% endblock %}

{% block content %}
    <h1 class="page-header"><span class="fa fa-th"></span>&nbsp;&nbsp;<a href="/node/{{ request.node.getId() }}/containers/" class="btn btn-danger btn-sm" role="button"><span class="fa fa-hand-o-left"></span>&nbsp;&nbsp;Go back to containers in node <strong>{{ request.node.getName() }}</strong></a>&nbsp;&nbsp;Container #</h1>

    {% block tabs %}
        {% include './partial.tab.html.twig' %}
    {% endblock %}

    {% if (error) %}
        <div class="form-group form-group-sm">
            <div class="col-sm-12">
                <div class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ error }}
                </div>
            </div>
        </div>
    {% else %}
    {% endif %}
{% endblock %}
